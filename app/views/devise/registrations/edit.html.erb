

<h2>Edit <%= resource.full_name %>'s Account</h2>
<hr>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { class: "form-horizontal", :method => :put }) do |f| %>
  <%= f.error_notification %>


  <div class="form-inputs">
    <%= f.input :email, :required => true, :autofocus => true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :first_name, :required => true %>
    <%= f.input :last_name, :required => true %>
    <%= f.input :profile_name, :required => true %>

    <%= f.input :password, :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :required => false %>
    <%= f.input :password_confirmation, :required => false %>
    <%= f.input :current_password, :hint => "we need your current password to confirm your changes", :required => true %>

    <% if current_user.admin? %>
      <hr>
      <h4>Administrator Tools</h4>
      <%= f.input :admin, label: "User is an administrator?", :required => false %>
      <%= link_to "List All Users", users_path %>
    <% end %>


  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>
 <div class="centered-text">
  <p><a href="https://en.gravatar.com/">Update avatar? Click here!</a></p>
  <h3>Cancel my account</h3>

  <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %></p>
</div>
<%= link_to "Back", :back %>
