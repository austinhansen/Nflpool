<%= simple_form_for(@game, html: {class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>
  <%= f.input :team_two_id, label: 'Away Team', :include_blank => false,collection: Team.order("name ASC"), label_method: :name %>
  <%= f.input :team_one_id, label: 'Home Team', :include_blank => false,collection: Team.order("name ASC"), label_method: :name %>
  <%= f.input :winning_team_id, label: 'Winner', collection: Team.order("name ASC"), label_method: :name %>
  <%= f.input :spread %>
  <%= f.input :bonus, label: 'Thanksgiving Game', as: :boolean %>
  <%= f.input :date %>
  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-success" %>
  </div>

<% end %>
