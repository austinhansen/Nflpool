<!DOCTYPE html>
<html>
<head>
  <title>NFL Pool</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
		<div class="navbar">
			<div class="navbar-inner main-inner">
				<div class="container">
					<ul class="nav pull-right">
						<% if user_signed_in? %>
							<li><%= link_to current_user.first_name, edit_user_registration_path %></li>
							<% if current_user.points != nil %>
								<li><a href="#"><%= current_user.points %> Points</a></li>
							<% else %>
								<li><a href="#">0 Points</a></li>
							<% end%>

							<li><%= link_to "Log out", logout_path %></li>
							<li><%= link_to(image_tag(current_user.gravatar_url), edit_user_registration_path) %></li>
						<% else %>
							<li><%= link_to "Register", register_path %></li>
							<li><%= link_to "Log In", login_path %></li>
						<% end %>
					</ul>
				</div>
			</div>
		</div>

	<% if current_page? root_url %>
	<% else %>
		<header class="hero-unit main-hero">
			<div class="container">
		  		<h1><a href="/">NFL Pool</a></h1>
		  		<p>The best way to run your football pool</p>
			</div>
		</header>
	<% end %>

	<div class="container">


		<div class="row">
			<div class="span1">
			</div>
			<div class="span10">
				<% flash.each do |type, message| %>
					<div class="alert <%= flash_class type %>">
						<button class="close" data-dismiss="alert">x</button>
							<%= message %>
					</div>
				<% end %>
				<%= yield %>
			</div>
		</div>
	</div>
</body>
</html>
