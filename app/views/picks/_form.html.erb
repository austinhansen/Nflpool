<%= simple_form_for([@game, @pick], html: {class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :pick_team_id, label: 'Winning Team', :include_blank => false, collection: Team.all, label_method: :name %>
    <%= f.input :user_id, :as => :hidden, :input_html => { :value => current_user } %>

  </div>

  <div class="form-actions">

      <%= f.button :submit, class: "btn btn-success" %>

  </div>
<% end %>

