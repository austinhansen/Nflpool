<h1>Listing Picks</h1>

<table>
  <tr>
    <th>Team</th>
    <th>Chosen On</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @picks.each do |pick| %>
  <tr>
    <td><%= pick.pick_team.name %></td>
    <td><%= pick.created_at.to_formatted_s(:long)  %></td>
    <td><%= link_to 'Show', pick %></td>
    <td><%= link_to 'Edit', edit_pick_path(pick) %></td>
    <td><%= link_to 'Destroy', pick, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

